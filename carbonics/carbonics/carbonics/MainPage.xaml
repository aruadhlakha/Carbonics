<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:carbonics"
             x:Class="carbonics.MainPage">
    <StackLayout>
        <Button Text="Click me" x:Name="Test" Clicked="Test_Clicked"/>
        <StackLayout Orientation="Horizontal">
            <Grid>
                <BoxView BackgroundColor="Blue" HeightRequest="20" WidthRequest="20" />
            </Grid>
            <Grid>
                <BoxView BackgroundColor="DarkSlateGray" VerticalOptions="Center" HorizontalOptions="Start" HeightRequest="10" WidthRequest="100" />
                <local:LevelBox x:Name="lBox"/>
            </Grid>
        </StackLayout>
    </StackLayout>


</ContentPage>
