<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="carbonics.TaskProposal">
    <ContentPage.Content>
        <Grid BackgroundColor="SlateGray">
            <StackLayout>
                <ScrollView VerticalOptions="StartAndExpand">
                    <StackLayout x:Name="Stacker" />
                </ScrollView>
                <Button Text="Confirm tomorrow's tasks!" x:Name="Confirmer" Clicked="Confirmer_Clicked" HeightRequest="50" VerticalOptions="End" Margin="0, 0, 0, 10"/>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>