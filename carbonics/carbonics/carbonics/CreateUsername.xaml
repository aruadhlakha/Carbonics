<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="carbonics.CreateUsername">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center">
            <Label Text="Carbonics"
                VerticalOptions="Center" 
                HorizontalOptions="Center" 
                   FontSize="20"/>
            <Label Text="You're new! Set your username. " HorizontalOptions="Center"/>
            <Entry x:Name="userent" HorizontalTextAlignment="Center"/>
            <Label Text="(Don't use your real name)" HorizontalOptions="Center" FontSize="7"/>
            <Grid>
                <Label Text="Would you like your level score to be on the leaderboard?" VerticalTextAlignment="Center" VerticalOptions ="Center" HorizontalOptions="StartAndExpand" FontSize="10"/>
                <Button x:Name="option" Clicked="Option_Clicked" Text="No" HeightRequest="50" WidthRequest="100" HorizontalOptions="End" />
            </Grid>
            <Button Text="Start sustaining!" x:Name="SetUser" VerticalOptions="End" Clicked="SetUser_Clicked" HeightRequest="50" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>